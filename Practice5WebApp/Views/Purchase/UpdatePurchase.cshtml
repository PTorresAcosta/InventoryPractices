@model Practice5Model.Models.Purchase
@{
	var title = "Edit Purchase";
	ViewData["Title"] = title;
}

<div class="">

	<form method="POST">
		<div class="text-danger" asp-validation-summary="All"></div>
		<input type="hidden" asp-for="PurchaseId" />
		<div class="form-group my-3">
			<label for="inputAddress">Product</label>
			<span class="text-danger" asp-validation-for="ProductId"></span>
			<select asp-for="ProductId" class="form-control" asp-items="ViewBag.products"></select>
		</div>
		<div class="form-group my-3">
			<label for="inputAddress2">Date</label>
			<span class="text-danger" asp-validation-for="PurchaseDate"></span>
			<input type="date" class="form-control" asp-for="PurchaseDate">
		</div>

		<button type="submit" class="btn btn-primary">Submit</button>
	</form>

</div>