@model Practice5Model.Models.Product
@{
	var title = "Insert Product";
	if (Model.ProductId != 0)
	{
		title = "Edit Product";
	}
	ViewData["Title"] = title;
}

<div class="">

	<form method="POST">
		<input type="hidden" asp-for="ProductId"/>
		<div class="form-group my-3">
			<label for="inputAddress">Name</label>
			<input type="text" class="form-control" asp-for="Name"> 
		</div>
		<div class="form-group my-3">
			<label for="inputAddress2">Sell price</label>
			<input type="text" class="form-control" asp-for="SellPrice">
		</div>
		<div class="form-group my-3">
			<label for="inputAddress2">Purchase price</label>
			<input type="text" class="form-control" asp-for="PurchasePrice">
		</div>
		
		<button type="submit" class="btn btn-primary">Submit</button>
	</form>

</div>