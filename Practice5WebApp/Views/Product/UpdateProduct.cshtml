@model Practice5Model.Models.Product
@{
	var title = "Edit Product";
	ViewData["Title"] = title;
}

<div class="">

	<form method="post" asp-action="UpdateProduct">
		<div class="text-danger" asp-validation-summary="All"></div>
		<input type="hidden" asp-for="ProductId" />
		<div class="form-group my-3">
			<label for="inputAddress">Name</label>
			<span class="text-danger" asp-validation-for="Name"></span>
			<input type="text" class="form-control" asp-for="Name">
		</div>
		<div class="form-group my-3">
			<label for="inputAddress2">Sell price</label>
			<span class="text-danger" asp-validation-for="SellPrice"></span>
			<input type="text" class="form-control" asp-for="SellPrice">
		</div>
		<div class="form-group my-3">
			<label for="inputAddress2">Purchase price</label>
			<span class="text-danger" asp-validation-for="PurchasePrice"></span>
			<input type="text" class="form-control" asp-for="PurchasePrice">
		</div>

		<button type="submit" class="btn btn-primary">Save</button>
	</form>

</div>