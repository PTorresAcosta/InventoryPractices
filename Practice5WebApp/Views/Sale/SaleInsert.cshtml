@model Practice5Model.Models.Sale
@{
	var title = "Insert Sale";
	ViewData["Title"] = title;
}

<div class="">

	<form method="POST">

		<div class="text-danger" asp-validation-summary="All"></div>
		<input type="hidden" asp-for="SaleId" />
		<div class="form-group my-3">
			<label for="inputAddress">Product</label>
			<span class="text-danger" asp-validation-for="ProductId"></span>
			<select asp-for="ProductId" class="form-control" asp-items="ViewBag.products"></select>
		</div>
		<div class="form-group my-3">
			<label for="inputAddress2">Date</label>
			<span class="text-danger" asp-validation-for="SaleDate"></span>
			<input type="date" class="form-control" asp-for="SaleDate">
		</div>

		<button type="submit" class="btn btn-primary">Submit</button>

	</form>

</div>